<h1>Editing Book</h1>
<div class="error-box">
    <% if @book.errors.any? %>
      <div class="error-explain">
        <h3><%= @book.errors.count %>errors prohibited this book from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li>
             <%= message %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
</div>

<%= form_for(@book) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <div class="action">
      <%= f.submit 'Update Book' %>
    </div>
    <%= link_to "Show", book_path(@book.id) %>
    |
    <%= link_to "Back", books_path %>
<% end %>

